<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/darkBg"
        tools:context=".Activities.SettingsActivity">

    <xyz.schwaab.avvylib.AvatarView
            android:layout_width="155dp"
            android:layout_height="129dp"
            android:layout_marginEnd="8dp"
            app:avvy_border_color="@color/grey_100"
            app:avvy_border_highlight_color="#ff5900"
            app:avvy_border_highlight_color_end="#bf15bc"
            app:avvy_border_thickness="2dp"
            app:avvy_border_thickness_highlight="3dp"
            app:avvy_distance_to_border="5dp"
            app:avvy_highlighted="true"
            app:avvy_loading_arches="5"
            app:avvy_loading_arches_degree_area="90"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:id="@+id/settingsProfileID"
            android:background="@drawable/happy_woman" android:layout_marginTop="32dp"
            app:layout_constraintTop_toTopOf="parent"/>
    <TextView
            android:text="Display Name"
            android:layout_width="165dp"
            android:layout_height="30dp"
            android:id="@+id/settingsDisplayName"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/settingsProfileID"
            android:textColor="@color/grey_100" android:textAlignment="center"/>
    <TextView
            android:text="TextView"
            android:layout_width="240dp"
            android:layout_height="43dp"
            android:id="@+id/settingsStatusText" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/settingsDisplayName" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.496" android:textStyle="italic" android:textSize="14sp"
            android:textColor="@color/grey_100" android:textAlignment="center"/>
    <Button
            android:text="@string/change_pic"
            android:layout_width="201dp"
            android:layout_height="56dp"
            android:textColor="#d3d3d3"
            android:stateListAnimator="@drawable/state_list_animator_z"
            android:background="@drawable/bt_shape"
            android:id="@+id/settingsChangeImgBtn" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginTop="32dp" app:layout_constraintTop_toBottomOf="@+id/settingsStatusText"/>
    <Button
            android:text="@string/change_status"
            android:layout_width="201dp"
            android:layout_height="56dp"
            android:textColor="#d3d3d3"
            android:stateListAnimator="@drawable/state_list_animator_z"
            android:background="@drawable/bt_shape"
            android:id="@+id/settingsChangeStatus" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginTop="32dp" app:layout_constraintTop_toBottomOf="@+id/settingsChangeImgBtn"/>

</android.support.constraint.ConstraintLayout>